---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Menu from "@components/Menu.astro";

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="¿Buscas departamentos en venta en Miraflores, Lima? ¡Conoce el nuevo proyecto de Llosa Edificaciones!">
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<Menu />
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>